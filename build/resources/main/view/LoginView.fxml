<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="750.0" prefWidth="750.0" style="-fx-background-color: #F5F5F5;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.AuthController">

    <!-- Sidebar -->
    <left>
        <VBox alignment="TOP_CENTER" prefWidth="200" spacing="0" style="-fx-background-color: #2E5C96; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 2, 0);">

            <!-- Header with logo/title -->
            <VBox alignment="CENTER" spacing="5" style="-fx-background-color: #1A4A7A; -fx-padding: 20;">
                <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: white;" text="ElderGuard">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>
                <Label style="-fx-font-size: 12px; -fx-text-fill: #B8CCE8;" text="Care Management System" />
            </VBox>

            <!-- Navigation Menu -->
            <VBox alignment="TOP_LEFT" spacing="2" style="-fx-padding: 10 0 20 0;">

                <!-- Main Menu Label -->
                <Label style="-fx-font-size: 11px; -fx-font-weight: bold; -fx-text-fill: #8BB3E8; -fx-padding: 15 20 10 20;" text="MAIN MENU" />

                <!-- Menu Items -->
                <Button prefWidth="200" style="-fx-background-color: #4A7BB8; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 12 20; -fx-background-radius: 0; -fx-border-width: 0; -fx-cursor: hand;" text="ðŸ“Š Main Menu" />

                <Button onMouseEntered="#handleMenuHover" onMouseExited="#handleMenuExit" prefWidth="200" style="-fx-background-color: transparent; -fx-text-fill: #B8CCE8; -fx-font-size: 14px; -fx-padding: 12 20; -fx-background-radius: 0; -fx-border-width: 0; -fx-cursor: hand;" text="ðŸ”” Notifications" />

                <Button onMouseEntered="#handleMenuHover" onMouseExited="#handleMenuExit" prefWidth="200" style="-fx-background-color: transparent; -fx-text-fill: #B8CCE8; -fx-font-size: 14px; -fx-padding: 12 20; -fx-background-radius: 0; -fx-border-width: 0; -fx-cursor: hand;" text="ðŸ“‹ History" />

                <Button onMouseEntered="#handleMenuHover" onMouseExited="#handleMenuExit" prefWidth="200" style="-fx-background-color: transparent; -fx-text-fill: #B8CCE8; -fx-font-size: 14px; -fx-padding: 12 20; -fx-background-radius: 0; -fx-border-width: 0; -fx-cursor: hand;" text="ðŸ‘¤ Account" />

            </VBox>

            <!-- Bottom spacer -->
            <Region VBox.vgrow="ALWAYS" />

            <!-- Footer -->
            <VBox alignment="CENTER" spacing="5" style="-fx-padding: 20;">
                <Label style="-fx-font-size: 10px; -fx-text-fill: #7AA3D6;" text="v2.1.0" />
            </VBox>

        </VBox>
    </left>

    <!-- Main Content Area -->
    <center>
        <StackPane style="-fx-background-color: #F8F9FA;">

            <!-- Login Card -->
            <VBox alignment="CENTER" maxWidth="450" maxHeight="450" spacing="30" style="-fx-background-color: white; -fx-background-radius: 12; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 20, 0, 0, 5); -fx-padding: 50;">

                <!-- Header -->
                <VBox alignment="CENTER" spacing="8">
                    <Label style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #2C3E50;" text="Welcome Back">
                        <font>
                            <Font name="System Bold" size="28.0" />
                        </font>
                    </Label>
                    <Label style="-fx-font-size: 14px; -fx-text-fill: #7F8C8D;" text="Sign in to your ElderGuard account" />
               <VBox.margin>
                  <Insets />
               </VBox.margin>
                </VBox>

                <!-- Login Form -->
                <VBox prefWidth="350" spacing="20">

                    <!-- Username Field -->
                    <VBox spacing="8">
                        <Label style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #34495E;" text="Username" />
                        <TextField fx:id="usernameField" focusTraversable="true" promptText="Enter your username" style="-fx-background-color: #F8F9FA; -fx-border-color: #E9ECEF; -fx-border-radius: 8; -fx-background-radius: 8; -fx-padding: 12; -fx-font-size: 14px; -fx-border-width: 1.5;" />
                    </VBox>

                    <!-- Password Field -->
                    <VBox spacing="8">
                        <Label style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #34495E;" text="Password" />
                        <PasswordField fx:id="passwordField" focusTraversable="true" promptText="Enter your password" style="-fx-background-color: #F8F9FA; -fx-border-color: #E9ECEF; -fx-border-radius: 8; -fx-background-radius: 8; -fx-padding: 12; -fx-font-size: 14px; -fx-border-width: 1.5;" />
                    </VBox>

                    <!-- Remember Me & Forgot Password -->
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <CheckBox style="-fx-text-fill: #7F8C8D; -fx-font-size: 12px;" text="Remember me" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Hyperlink style="-fx-text-fill: #2E5C96; -fx-font-size: 12px;" text="Forgot password?" />
                    </HBox>

                    <!-- Login Button -->
                    <Button fx:id="loginButton" onAction="#handleLogin" onMouseEntered="#handleLoginHover" onMouseExited="#handleLoginExit" prefHeight="45" prefWidth="350" style="-fx-background-color: linear-gradient(to bottom, #4A7BB8, #2E5C96); -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 8; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 5, 0, 0, 2);" text="Sign In" />

                    <!-- Error Label -->
                    <Label fx:id="errorLabel" style="-fx-text-fill: #E74C3C; -fx-font-size: 12px; -fx-padding: 5 0 0 0;" wrapText="true" />

                </VBox>

                <!-- Divider -->
                <VBox alignment="CENTER" spacing="15">
                    <Separator prefWidth="300" style="-fx-background-color: #E9ECEF;" />
                    <Label style="-fx-font-size: 12px; -fx-text-fill: #95A5A6;" text="Need help? Contact system administrator" />
                </VBox>

            </VBox>

        </StackPane>
    </center>

</BorderPane>

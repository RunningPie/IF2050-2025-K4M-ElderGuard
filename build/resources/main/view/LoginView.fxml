<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<StackPane prefHeight="800.0" prefWidth="900.0" style="-fx-background-color: linear-gradient(to bottom right, #667eea 0%, #764ba2 100%);" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.AuthController">

    <!-- Main Card Container -->
    <VBox alignment="CENTER" maxHeight="400" maxWidth="400" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 5); -fx-padding: 50;">

        <!-- Header Section -->
        <VBox alignment="CENTER" spacing="10" style="-fx-padding: 0 0 30 0;">
            <Label style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Welcome Back" />
            <Label style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d;" text="Sign in to your ElderGuard account" />
        </VBox>

        <!-- Form Section -->
        <VBox alignment="CENTER" prefWidth="300" spacing="20">

            <!-- Username Field -->
            <VBox spacing="8">
                <Label style="-fx-font-size: 14px; -fx-font-weight: 500; -fx-text-fill: #2c3e50;" text="Username" />
                <TextField fx:id="usernameField" promptText="Enter your username" style="-fx-pref-width: 300; -fx-pref-height: 45; -fx-background-color: #f8f9fa; -fx-border-color: #e9ecef; -fx-border-radius: 8; -fx-background-radius: 8; -fx-padding: 12; -fx-font-size: 14px;" />
            </VBox>

            <!-- Password Field -->
            <VBox spacing="8">
                <HBox alignment="CENTER_LEFT">
                    <Label style="-fx-font-size: 14px; -fx-font-weight: 500; -fx-text-fill: #2c3e50;" text="Password" />
                    <Region HBox.hgrow="ALWAYS" />
                    <Label style="-fx-font-size: 12px; -fx-text-fill: #667eea; -fx-cursor: hand;" text="Forgot password?" />
                </HBox>
                <PasswordField fx:id="passwordField" promptText="Enter your password" style="-fx-pref-width: 300; -fx-pref-height: 45; -fx-background-color: #f8f9fa; -fx-border-color: #e9ecef; -fx-border-radius: 8; -fx-background-radius: 8; -fx-padding: 12; -fx-font-size: 14px;" />
            </VBox>

            <!-- Remember Me Checkbox -->
            <HBox alignment="CENTER_LEFT" spacing="8" style="-fx-padding: 5 0 0 0;">
                <CheckBox style="-fx-text-fill: #7f8c8d; -fx-font-size: 13px;" />
                <Label style="-fx-text-fill: #7f8c8d; -fx-font-size: 13px;" text="Remember me" />
            </HBox>

            <!-- Sign In Button -->
            <Button fx:id="loginButton" onAction="#handleLogin" style="-fx-pref-width: 300; -fx-pref-height: 45; -fx-background-color: #667eea; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 8; -fx-cursor: hand;" text="Sign In" />

            <!-- Error/Success Message -->
            <Label fx:id="errorLabel" alignment="CENTER" maxWidth="300" style="-fx-font-size: 13px; -fx-padding: 10 0 0 0;" textFill="#e74c3c" wrapText="true" />

        </VBox>

        <!-- Footer Section -->
        <VBox alignment="CENTER" spacing="15" style="-fx-padding: 30 0 0 0;">

            <!-- Divider with "OR" -->
            <HBox alignment="CENTER" prefWidth="300" spacing="10">
                <Separator style="-fx-pref-width: 120;" />
                <Label style="-fx-text-fill: #bdc3c7; -fx-font-size: 12px;" text="OR" />
                <Separator style="-fx-pref-width: 120;" />
            </HBox>

            <!-- Sign Up Link -->
            <HBox alignment="CENTER" spacing="5">
                <Label style="-fx-text-fill: #7f8c8d; -fx-font-size: 13px;" text="Need help?" />
                <Label style="-fx-text-fill: #667eea; -fx-font-size: 13px; -fx-cursor: hand; -fx-underline: true;" text="Contact system administrator" />
            </HBox>

            <!-- Create Account Button -->
            <Button fx:id="signUpButton" onAction="#handleSignUp" style="-fx-pref-width: 300; -fx-pref-height: 45; -fx-background-color: transparent; -fx-text-fill: #667eea; -fx-font-size: 14px; -fx-font-weight: 500; -fx-border-color: #667eea; -fx-border-radius: 8; -fx-background-radius: 8; -fx-cursor: hand;" text="Create New Account" />

        </VBox>
      <padding>
         <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      </padding>

    </VBox>

</StackPane>

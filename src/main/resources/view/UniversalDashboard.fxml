<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            prefHeight="600.0" prefWidth="900.0" style="-fx-background-color: #f5f5f5;"
            fx:controller="controllers.DashboardController">

    <!-- Header -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-background-color: #0C3C78; -fx-padding: 15;">
            <Label fx:id="headerTitle" text="ElderGuard Dashboard" textFill="white" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label fx:id="welcomeLabel" text="Welcome, User" textFill="white" style="-fx-font-size: 14px;"/>
            <Button fx:id="logoutButton" onAction="#handleLogout" text="Logout" style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 8 15;"/>
        </HBox>
    </top>

    <!-- Sidebar Navigation -->
    <left>
        <VBox fx:id="navigationMenu" spacing="10" style="-fx-background-color: white; -fx-padding: 20; -fx-border-color: #dee2e6;" prefWidth="200">
            <Label text="Navigation" style="-fx-font-weight: bold; -fx-font-size: 16px;"/>
            <Separator/>
            <Button fx:id="dashboardButton" onAction="#handleDashboard" text="Dashboard" prefWidth="160" style="-fx-background-color: #0C3C78; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 10;"/>
            <Button fx:id="emergencyAlertsButton" onAction="#handleEmergencyAlerts" text="Emergency Alerts" prefWidth="160" style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 10;"/>
            <Button fx:id="accountButton" onAction="#handleAccount" text="Account" prefWidth="160" style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 10;"/>
        </VBox>
    </left>

    <!-- Main Content -->
    <center>
        <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;">
            <VBox fx:id="mainContent" spacing="20" style="-fx-padding: 30;">

                <!-- Role-specific content will be loaded here -->
                <VBox fx:id="contentContainer" spacing="15">

                    <!-- Welcome Section -->
                    <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 20; -fx-border-color: #dee2e6; -fx-border-radius: 5; -fx-background-radius: 5;">
                        <Label fx:id="sectionTitle" text="Dashboard Overview" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                        <Separator/>
                        <Label fx:id="roleDescription" text="Welcome to your dashboard" style="-fx-font-size: 14px; -fx-text-fill: #6c757d;"/>
                    </VBox>

                    <!-- Dynamic Content Area -->
                    <VBox fx:id="dynamicContent" spacing="15">
                        <!-- Content will be populated based on user role -->
                    </VBox>

                </VBox>

            </VBox>
        </ScrollPane>
    </center>

    <!-- Footer -->
    <bottom>
        <Label text="Â© 2025 ElderGuard - Healthcare Management System"
               style="-fx-padding: 10; -fx-font-size: 10px; -fx-text-fill: gray;"
               alignment="CENTER"/>
    </bottom>

</BorderPane>
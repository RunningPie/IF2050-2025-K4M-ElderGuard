<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            prefHeight="600.0" prefWidth="900.0" style="-fx-background-color: #f5f5f5;"
            fx:controller="controllers.EmergencyAlertsController">

    <!-- Header -->
    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="75" spacing="20" style="-fx-background-color: #0C3C78; -fx-padding: 15;">
            <Label text="ElderGuard" textFill="white" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-padding: 15;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label text="Welcome, [Username]" textFill="white" style="-fx-font-size: 14px;"/>
            <Button onAction="#handleLogout" style="-fx-background-color: #0C3C78; -fx-text-fill: white; -fx-font-weight: bold;">
                <graphic>
                    <Label text="ðŸšª" style="-fx-font-size: 16px; -fx-text-fill: white;"/>
                </graphic>
                Logout
            </Button>
        </HBox>
    </top>

    <!-- Sidebar Navigation -->
    <left>
        <VBox fx:id="navigationMenu" spacing="10" style="-fx-background-color: white; -fx-padding: 20; -fx-border-color: #dee2e6;" prefWidth="200">
            <Button fx:id="dashboardButton" onAction="#handleDashboard" text="Dashboard" prefWidth="160" style= "-fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 10;"/>
            <Button fx:id="emergencyAlertsButton" onAction="#handleEmergencyAlerts" text="Emergency Alerts" prefWidth="160" style=" -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 10;"/>
            <Button fx:id="accountButton" onAction="#handleAccount" text="Account" prefWidth="160" style="-fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 10;"/>
        </VBox>
    </left>

    <!-- Main Content -->
    <center>
        <VBox spacing="20" style="-fx-padding: 30;">

            <!-- Controls Section -->
            <HBox spacing="15" alignment="CENTER_LEFT" style="-fx-background-color: white; -fx-padding: 20; -fx-border-color: #dee2e6; -fx-border-radius: 5; -fx-background-radius: 5;">
                <Label text="Emergency Alerts Management" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <ComboBox fx:id="filterComboBox" promptText="Filter by Priority" prefWidth="150" style="-fx-background-radius: 5;"/>
                <Button fx:id="refreshButton" onAction="#refreshAlerts" text="ðŸ”„ Refresh" style="-fx-background-color: #17a2b8; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 8 15;"/>
                <Button fx:id="createAlertButton" onAction="#createAlert" text="âž• Create Alert" style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 8 15;"/>
            </HBox>

            <!-- Alerts Statistics -->
            <HBox spacing="20" alignment="CENTER">
                <VBox alignment="CENTER" spacing="5" style="-fx-background-color: white; -fx-padding: 15; -fx-border-color: #dc3545; -fx-border-radius: 8; -fx-background-radius: 8; -fx-min-width: 120;">
                    <Label fx:id="criticalCountLabel" text="0" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #dc3545;"/>
                    <Label text="Critical" style="-fx-font-size: 12px; -fx-text-fill: #6c757d;"/>
                </VBox>
                <VBox alignment="CENTER" spacing="5" style="-fx-background-color: white; -fx-padding: 15; -fx-border-color: #ffc107; -fx-border-radius: 8; -fx-background-radius: 8; -fx-min-width: 120;">
                    <Label fx:id="highCountLabel" text="0" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #ffc107;"/>
                    <Label text="High" style="-fx-font-size: 12px; -fx-text-fill: #6c757d;"/>
                </VBox>
                <VBox alignment="CENTER" spacing="5" style="-fx-background-color: white; -fx-padding: 15; -fx-border-color: #fd7e14; -fx-border-radius: 8; -fx-background-radius: 8; -fx-min-width: 120;">
                    <Label fx:id="mediumCountLabel" text="0" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #fd7e14;"/>
                    <Label text="Medium" style="-fx-font-size: 12px; -fx-text-fill: #6c757d;"/>
                </VBox>
                <VBox alignment="CENTER" spacing="5" style="-fx-background-color: white; -fx-padding: 15; -fx-border-color: #28a745; -fx-border-radius: 8; -fx-background-radius: 8; -fx-min-width: 120;">
                    <Label fx:id="lowCountLabel" text="0" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #28a745;"/>
                    <Label text="Low" style="-fx-font-size: 12px; -fx-text-fill: #6c757d;"/>
                </VBox>
                <VBox alignment="CENTER" spacing="5" style="-fx-background-color: white; -fx-padding: 15; -fx-border-color: #17a2b8; -fx-border-radius: 8; -fx-background-radius: 8; -fx-min-width: 120;">
                    <Label fx:id="totalCountLabel" text="0" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #17a2b8;"/>
                    <Label text="Total" style="-fx-font-size: 12px; -fx-text-fill: #6c757d;"/>
                </VBox>
            </HBox>

            <!-- Alerts Table -->
            <VBox style="-fx-background-color: white; -fx-padding: 20; -fx-border-color: #dee2e6; -fx-border-radius: 5; -fx-background-radius: 5;">
                <Label text="Emergency Alerts List" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2c3e50; -fx-padding: 0 0 10 0;"/>
                <Separator style="-fx-background-color: #e9ecef;"/>

                <TableView fx:id="alertsTable" prefHeight="300" style="-fx-background-color: transparent;">
                    <columns>
                        <TableColumn fx:id="priorityColumn" text="Priority" prefWidth="80" style="-fx-alignment: CENTER;"/>
                        <TableColumn fx:id="alertTypeColumn" text="Type" prefWidth="120"/>
                        <TableColumn fx:id="patientColumn" text="Patient" prefWidth="150"/>
                        <TableColumn fx:id="locationColumn" text="Location" prefWidth="120"/>
                        <TableColumn fx:id="timeColumn" text="Time" prefWidth="120"/>
                        <TableColumn fx:id="statusColumn" text="Status" prefWidth="100" style="-fx-alignment: CENTER;"/>
                        <TableColumn fx:id="actionsColumn" text="Actions" prefWidth="120" style="-fx-alignment: CENTER;"/>
                    </columns>
                </TableView>
            </VBox>

            <!-- Role-specific Information -->
            <VBox fx:id="roleInfoSection" spacing="10" style="-fx-background-color: white; -fx-padding: 20; -fx-border-color: #dee2e6; -fx-border-radius: 5; -fx-background-radius: 5;">
                <Label fx:id="roleInfoTitle" text="Information" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                <Separator style="-fx-background-color: #e9ecef;"/>
                <Label fx:id="roleInfoContent" text="Loading..." style="-fx-font-size: 14px; -fx-text-fill: #6c757d;" wrapText="true"/>
            </VBox>

        </VBox>
    </center>

    <!-- Footer -->
    <bottom>
        <Label text="Â© 2025 ElderGuard - Emergency Response System"
               style="-fx-padding: 10; -fx-font-size: 10px; -fx-text-fill: gray;"
               alignment="CENTER"/>
    </bottom>

</BorderPane>